extends layout



block content
  h1= title
  p Listado de #{title}

    div.container
    .row.justify-content-center
      .col-md-6
        .card.mt-5
          .card-body
            h2.text-center.mb-4 Crear Direcci√≥n
            form(action="/crear-direccion" method="POST" role='form')

              .form-group
                label(for='addressline1') [[AddressLine1]]
                input#email.form-control(type='text' name='addressline1', required)

                .form-group
                label(for='addressline2') [[AddressLine2]]
                input#email.form-control(type='text' name='addressline2', required)

                .form-group
                label(for='city') [[City]]
                input#email.form-control(type='text' name='city', required)

                .form-group
                label(for='stateprovinceid') [[StateProvinceID]]
                input#email.form-control(type='number' name='stateprovinceid', required)

                .form-group
                label(for='postalcode') [[PostalCode]]
                input#email.form-control(type='text' name='postalcode', required)


              .form-group
                button.btn.btn-primary.btn-block(type='submit') Crear Usuario